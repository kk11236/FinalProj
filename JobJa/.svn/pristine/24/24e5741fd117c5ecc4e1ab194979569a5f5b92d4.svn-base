@charset "UTF-8";


.search-main {
	display:grid;
	grid-template-columns: 2.5fr 1fr;
	gap:20px;
}

.search-main-left {
	display:grid;
	gap: 30px;
}
.ents{
	background-color: #fff;
}

.div-top {
	display:flex;
	align-items:end;
	padding: 20px;
	border-bottom: 1px solid #eee
}

.ent-logo img {
	width:80px;
	height:80px;
	object-fit:contain;
}

.ent-list {
	display:grid;
	grid-template-columns : repeat(5, 1fr);
	background-image: url("/resources/images/company-list-background.png");
	background-size:cover;
	height:230px;
}

.ent-list-item {
	text-align:center;
	padding: 25px 0;
	background-color:#fff
}

.ent-list-item:not(:nth-child(5n)) {
	border-right:1px solid #eee;
}

.ent-name {
	font-weight:bold;
	margin-bottom:10px;
	text-align:center;
}

.ent-sector{
	color:#999;
	font-size:12px;
}

.ent-rate {
	font-size:13px;
	margin-top:25px;
}

.ent-rate>span {
	border: 1px solid #ddd;
	padding: 1px 7px;
	border-radius:5px;	
}



.recruits {
	background-color: #fff;
}


.recruit-item-wrap {
	display: grid;
	grid-template-columns : 3.5fr 1fr;
}

.recruit-list-item {
	padding: 20px 40px;
	border-bottom : 1px solid #e6e6e6;
}

.recruit-top{
	display: flex;
	align-items:center;
	gap: 12px;
	margin-bottom:12px;
}

.recruit-title{
	font-size:15px;
	font-weight:bold;
}

.due {
	font-size:13px;
}

.recruit-mid {
	display:flex;
	font-size:13px;
	margin-bottom: 18px;
	gap:10px;
}


.recruit-bot{
	display: flex;
	align-items:center;
	font-size: 12px;
	color:#949494;
}

.hot-ent-logo img{
	width:65px;
	height:65px;
	object-fit:contain;
	border: 1px solid #ddd;
}

.hot-recruit {
	background-color:#fff;
	padding: 20px;
}

.hot-recruit-item{
	display:flex;
	gap:15px;
	margin-bottom:7px;
}

.hot-recruit-title{
	font-size:13px;
	font-weight:bold;
	margin-bottom:7px;
}

.hot-ent-name{
	color:#949494;
	font-size:12px;
}

.hot-recruit {
	position:sticky;
	top:calc(62px + 30px);
}



.interest-recruit{
    font-size:13px;
	display:inline-flex;
	justify-content:center;
	align-items:center;
}
.interest-recruit::before {
    content:"\f02e";
    display: inline-block;
    font-family: "Font Awesome 5 Free";
    font-weight: 900;
    color: #4c5a70;
    cursor: pointer;
}

.interest-recruit.active::before{
    content:"\f02e";
    color: #ffc107;
    background-color:#ffc107:
}

.empty-recruit {
	height:500px;
}
