package jobja.chatting.controller;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;

import jobja.mypage.member.vo.MemberVO;
import jobja.util.ModelAttributeUtil;
import lombok.extern.slf4j.Slf4j;

//chat.jsp를 띄워주는 컨트롤러
@Slf4j
@Controller
public class ChattingController {
	
	@Autowired
	ModelAttributeUtil modelAttributeUtil;
	
	@GetMapping("/chatting")
	public String chat (HttpServletRequest req, HttpServletResponse resp, HttpSession session, Model model) {
		
		MemberVO memberVO = modelAttributeUtil.getCurrentLoginName();
		String memId = memberVO.getMemId();
		
		model.addAttribute("memId", memId);
		
		return "chat";
	}
}
